@model RegisterViewModel

@{
    Layout = null;
}





<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/RegisterStyle.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@700&family=Roboto:wght@100;300&display=swap"
          rel="stylesheet">
    <title>Forum</title>
</head>

<body>
     @(await Html.PartialAsync("Header", Model.AuthorizeUser))

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-5 col-sm-5 GridHeight Grid" id="RegistrationFormId">
                <div class="Grid" id="InnerRegistrationFormId">
                    <div class="d-flex">
                        <h1>Welcome!</h1>
                        <img src="https://www.graphicdesignforum.com/images/emoji/apple/wave/6.png" width="35"
                             height="35">
                    </div>
                    <p>Let's create your account</p>
                    <form asp-action="Register" asp-controller="Account" method="POST">
                        <div class="form-group">
                            <input asp-for="CreateUser.Username" type="text" class="form-control ValueInputItem" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <input asp-for="CreateUser.FirstName" type="text" class="form-control ValueInputItem" placeholder="Firstname">
                        </div>
                        <div class="form-group">
                            <input asp-for="CreateUser.LastName" type="text" class="form-control ValueInputItem" placeholder="Lastname">
                        </div>
                        <div class="form-group">
                            <input asp-for="CreateUser.BirthDate" type="date" class="form-control ValueInputItem">
                        </div>
                        <div class="form-group">
                            <select asp-for="CreateUser.GenderId" class="form-select ValueInputItem">
                                @foreach (var gender in Model.Genders)
                                {
                                    <option value="@gender.Id">@gender.Gender_type</option>

                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <input asp-for="CreateUser.Email" type="email" class="form-control ValueInputItem" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input asp-for="CreateUser.Password" type="password" class="form-control ValueInputItem" placeholder="Password">
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="d-flex">
                            <input type="submit" id="RegisterBTNId" value="Create your account">
                            <a asp-action="Login" id="ActionToLoginId">Log In</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/RegisterJs.js"></script>
</body>

</html>

