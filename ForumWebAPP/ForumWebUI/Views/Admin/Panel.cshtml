@model AdminPanelViewModel

@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/PanelStyle.css">
    <link rel="stylesheet" href="~/css/CreateThemeStyle.css">
    <link rel="stylesheet" href="~/css/DeleteThemeStyle.css">
    <link rel="stylesheet" href="~/css/BlockUserStyle.css">
    <link rel="stylesheet" href="~/css/UnBlockUserStyle.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <title>Panel</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-xs-2 GridHeight" id="AdminMenuBoxId">
                <ul class="text-uppercase">
                    <li id="ThemeId">
                        Themes
                        <ul class="text-uppercase Sub-Menu">
                            <li><a asp-route-click="CreateTheme" asp-action="ClickedSubMenu">Create theme</a></li>
                            <li><a asp-route-click="DeleteTheme" asp-action="ClickedSubMenu">Delete theme</a></li>
                        </ul>
                    </li>
                    <li id="UserId">
                        Users
                        <ul class="text-uppercase Sub-Menu">
                            <li><a  asp-route-click="BlockUser" asp-action="ClickedSubMenu">Block user</a></li>
                            <li><a asp-route-click="UnBlockUser" asp-action="ClickedSubMenu">UnBlock user</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="col-lg-10 col-md-10 col-xs-10 GridHeight">
                <div id="SignOutId">
                    <form method="Post" asp-action="Logout" asp-controller="Account">
                        <button type="submit" id="LogoutBTN"><i class="fas fa-sign-out-alt"></i></button>
                    </form>
                </div>
                @*For partial Views*@

                @if (MenuActionHelper.SubMenuAction != "CreateTheme")
                {

                }
                else
                {
                    @(await Html.PartialAsync("CreateTheme", Model.Theme))
                }

                @if (MenuActionHelper.SubMenuAction != "DeleteTheme")
                {

                }
                else
                {
                    @(await Html.PartialAsync("DeleteTheme", Model.Themes))
                }
                @if (MenuActionHelper.SubMenuAction != "BlockUser")
                {

                }
                else
                {
                    @(await Html.PartialAsync("BlockUsers", Model.BlockedUsers))
                }


                @if (MenuActionHelper.SubMenuAction != "UnBlockUser")
                {

                }
                else
                {
                    @(await Html.PartialAsync("BlockedUsers", Model.ActiveUsers))
                }
            </div>
        </div>
    </div>
</body>

</html>
