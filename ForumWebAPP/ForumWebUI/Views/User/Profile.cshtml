@model UserViewModel

@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/ProfileStyle.css">
    <title>Profile</title>

</head>
<body>

    @(await Html.PartialAsync("Header", Model.AuthorizeUser))

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-10 col-sm-10" id="ProfileContainerId">
                <form method="post" asp-action="Profile">
                    <input asp-for="Id" hidden="hidden" />
                    <div id="UploadImageId" class="text-center">
                        <img id="ProfileIMG" src="@Model.ImgUrl"><br>
                        <label class="custom-file-upload">
                            <input type="file" id="file" asp-for="@Model.ImgUrl" accept=".jpg, .png, .jpeg" />
                            Upload image
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="@Model.Username" class="form-control" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="@Model.FirstName" placeholder="Firstname" readonly class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="@Model.LastName" placeholder="Lastname" readonly class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="@Model.Email" placeholder="Email" readonly class="form-control">
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div>
                        <input type="submit" value="Update" class="form-control">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/js/UploadImage.js"></script>
    <script src="~/js/Profile.js"></script>
</body>
</html>