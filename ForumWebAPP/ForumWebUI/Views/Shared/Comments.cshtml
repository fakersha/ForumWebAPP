@model PostViewModel

@{
    Layout = null;
}

<div class="Main2">
    <div class="container-fluid Plr" id="AnotherCommentID">
        <div class="row">
            <div id="CommentBoxID" class="d-block">
                @foreach (var comment in Model.Comments)
                {
                    <div class="d-flex MainComment pr-sm-0">
                        <img src="@comment.User.ImgUrl" width="30" height="30">
                        <div class="col-lg-12 col-md-12 col-xs Grid d-flex IconsEffects">
                            <div id="CommentText">
                                <p>@comment.CommentDesctription</p>
                                <i class="fa fa-thumbs-up"></i>
                            </div>
                        </div>
                    </div>
                    @foreach (var replayComments in comment.CommentReplies)
                    {
                        <div class="d-flex ReplyComment pr-sm-0">
                            <img src="@replayComments.User.ImgUrl" width="30" height="30">
                            <div class="col-lg-12 col-md-12 col-xs Grid d-flex IconsEffects">
                                <div id="CommentText2">
                                    <p>@replayComments.ReplayDescription</p>
                                </div>
                                <i class="fa fa-thumbs-up"></i>
                            </div>
                        </div>
                    }
                    <div class="d-flex ReplyComment BottomCorrect pr-sm-0">
                        <img src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_1280.png" width="30" height="30">
                        <div class="col-lg-12 col-md-12 col-xs Grid">
                            <form>
                                <div class="form-group d-flex IconsEffects">
                                    <textarea class="form-control" id="exampleFormControlTextarea2" rows="3"
                                              placeholder="Write a comment..."></textarea>
                                    <i class="fa fa-paper-plane"></i>
                                </div>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="container-fluid Plr" id="WriteCommentID">
    <div class="row">
        <div id="CommentBoxID2" class="d-flex">
            <img src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_1280.png" width="30" height="30">
            <div class="col-lg-12 col-md-12 col-xs Grid">
                <form>
                    <div class="form-group d-flex IconsEffects">
                        <textarea class="form-control" id="messageInput" rows="3"
                                  placeholder="Write a comment..."></textarea>
                        <i class="fa fa-paper-plane AddCommentBTN" id="sendButton"></i>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
