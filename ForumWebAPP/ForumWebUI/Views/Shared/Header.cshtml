@model AuthorizeUserViewModel

<link rel="stylesheet" href="~/css/HeaderStyle.css">

<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="NavBarId">
    <div class="container-fluid">
        <a class="navbar-brand" asp-action="Index" asp-controller="Home" id="ForumLogoId">Forum</a>
        <div>
            <div class="btn-group">
                <button type="button" data-bs-toggle="dropdown" id="DropDownBTNId" data-bs-display="static" aria-expanded="false">
                    @if (Model == null)
                    {
                        <img src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_1280.png" width="25" height="25" id="ProfileImageId">
                    }
                    else
                    {
                        <img src="@Model.ImgUrl" width="25" height="25" id="ProfileImageId">
                    }
                </button>
                <ul class="dropdown-menu dropdown-menu-lg-end">
                    @if (Model == null)
                    {
                        <li><a class="dropdown-item" asp-action="Login" asp-controller="Account">Login</a></li>
                        <li><a class="dropdown-item" asp-action="Register" asp-controller="Account">Register</a></li>
                    }
                    else
                    {
                        <li><a class="dropdown-item" asp-action="Profile" asp-controller="User">Profile</a></li>
                        <li>
                            <form asp-action="Logout" asp-controller="Account" method="post">
                                <button class="dropdown-item" type="submit">Sign out</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
